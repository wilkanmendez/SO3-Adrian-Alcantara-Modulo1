# Obtener nombre de interfaz
nmcli device status

# USar DHCP
sudo nmcli con mod enp0s3 ipv4.method auto
sudo nmcli con up enp0s3

# Usar IP estática
sudo nmcli con mod enp0s3 ipv4.method manual
sudo nmcli con mod enp0s3 ipv4.addresses 192.168.100.25/24
sudo nmcli con mod enp0s3 ipv4.gateway 192.168.100.1
sudo nmcli con mod enp0s3 ipv4.dns "8.8.8.8 8.8.4.4"
sudo nmcli con up enp0s3

# Configuración gráfica vía TUI
sudo nmtui

# Configuración rápida sin NetworkManager de manera temporal
sudo ip addr add 192.168.1.150/24 dev enp0s3
sudo ip route add default via 192.168.1.1

# Para volver a DHCP
sudo dhclient -v enp0s3

# Configurar DNS con nmcli
sudo nmcli con mod enp0s3 ipv4.dns "8.8.8.8 8.8.4.4"
sudo nmcli con up enp0s3

# Para editar de manera temporal
sudo nano /etc/resolv.conf
nameserver 8.8.8.8
nameserver 8.8.4.4
